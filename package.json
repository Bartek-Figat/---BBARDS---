{
  "name": "bbards",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently \"yarn workspace @bbards-ts/back-end dev\" \"yarn workspace @bbards-ts/front-end start\"",
    "lint": "lerna run lint --stream",
    "format": "lerna run format"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lerna": "^5.5.1",
    "lint-staged": "^13.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "lint",
      "format"
    ],
    "*.{json,md,yaml,yml,scss,css}": [
      "format"
    ]
  }
}
